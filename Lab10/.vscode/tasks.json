{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cppbuild",
			"label": "C/C++: cl.exe build active file",
			"command": "cl.exe",
			"args": [
				"/Zi",
				"/EHsc",
				"/nologo",
				"${workspaceFolder}\\Core\\src\\*.cpp",
				"/Fe:",
				"${workspaceFolder}\\build\\${fileBasenameNoExtension}.exe",
				"/Fd:",
                "${workspaceFolder}\\build\\vc140.pdb",
				"/Fo:",
                "${workspaceFolder}\\build\\",
			],
			"options": {
				"cwd": "${fileDirname}"
			},
			"problemMatcher": [
				"$msCompile"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"detail": "compiler: cl.exe"
		}
	]
}